@model E_Commerce.Models.Products




@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_FrontCLayout.cshtml";
}

<h1>Product Detials</h1>







<!--========Cards========-->
<div class="container-fluid main-cont">
    <div class="row news-row">
        <div class="container-fluid col-md-12 col-sm-6 justify-content-center news-block">
            <div class="card-group style="display:block !important;">
               

                <div class="row">
                    <div class="col-6">
                        <img class="img-thumbnail img-fluid" src="https://i.imgur.com/wLMJQPH.png" />
                    </div>

                    <div class="col-6">
                        

                        <h3 class="text-center bg-info">Name: @Model.Name</h3>
                        @if(Model.IsSale == false)
                        {
                            <h6>Price: $@Model.price</h6>
                        }
                        else
                        {
                            <h6> Price: <P class=" text-decoration-line-through">  $@Model.price </P>  || $@Model.AfterSale</h6>
                        }
                        
                        <h6>Description: @Model.Description</h6>

                        <br/>
                        <br/>

                        <form method="post" asp-action="AddToCart" asp-controller="Home">
                            <input type="hidden" value="@Model.Id" name="productId" />
                            <input type="submit" value="Add To Cart" class="btn btn-primary" />

                        </form>

                        
                    </div>


                </div>



            </div>
        </div>
    </div>
</div>



